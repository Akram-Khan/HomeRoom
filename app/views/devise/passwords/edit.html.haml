			.four.columns
			.six.columns
				%h4 Change your password
				=form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :validate => true) do |f|
					%ul
						=devise_error_messages!
						%li=f.hidden_field :reset_password_token
						%li
							%strong=f.label :password, "New Password"
							=f.password_field :password, :placeholder => "New password", :class => "custom_textarea"
						%li
							%strong=f.label :confirmpassword, "Confirm Password"
							=f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "custom_textarea"
						%li=f.submit :class => "small black button", :value => "Change my password"
				= render :partial => "devise/shared/links"
			.two.columns