.section
	.row
		%h4 Resend confirmation instructions
		= semantic_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
			=f.inputs do
				=f.input :email
			=f.buttons do
				=f.commit_button :button_html => {:class => "small radius nice green button"}, :label => "Resend confirmation instructions"
			= render :partial => "devise/shared/links"

