.welcome_screen
	.row
		.three.columns.homepage-welcome-message
			=render "signup"
		.nine.columns
			=image_tag "daw.jpg"


#wrapper_wide
	.row
		#wrapper
			.two.columns
				=render "nav"
			.eight.columns
				-flash.each do |key,value|
					.flash
						-key

					.alert-box
						=value
				#page1									
					%a{:name => "Home"}
					=render "home"

				#page2
					%a{:name => "Kind_Words"}
					=render "kind_words"

				#page3
					%a{:name => "Gallery"}
					=render "gallery"

				#page4
					%a{:name => "Team"}
					=render "team"

				#page5
					%a{:name => "Jobs"}
					=render "jobs"

				#page6
					%a{:name => "Press_Kit"}
					=render "press_kit"
				#end
			.two.columns
				=render "share_bar"
