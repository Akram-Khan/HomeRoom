.content
	.section
		.row
			.twelve.columns.form_background
				.section
					.row
				.section
					.row
						.eight.columns.centered
							%h3 Invite your students to join the course
				%hr
				.section
					.row
						.seven.columns.give_right_border
							= form_for(@invite_student, :url => course_invite_students_path(@course), :html => {:multipart => true}) do |f|
								.twelve.columns.centered
									.section
										.row
											.one.columns
											.eleven.columns
												%strong=f.label :invite_by_email, "Email Addresses (separate multiple addresses by commas)"
												=f.text_area :email, :placeholder => "Email Addresses (separate multiple addresses by commas)", :rows => "10", :class => "custom_textarea_no_width"
										.row
											.one.columns
											.three.columns
												=f.submit :class => "small black button", :value => "Invite Students"
											.three.columns
												=link_to "Go to Course", course_path(@course), :class => "small blue button"
											.two.columns
												=link_to "Dashboard", dashboard_path, :class => "small white button"
											.one.columns
						.four.columns
							.section
								.row
									.one.columns
									.eleven.columns
										%p
											Share this code with your students to give them access to your course:
								.row
									.five.columns.centered
										%h2=@course.invitation_code_student
						.one.columns
									
									